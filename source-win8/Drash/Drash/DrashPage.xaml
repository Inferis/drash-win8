<common:LayoutAwarePage
    x:Class="Drash.DrashPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="using:Drash"
    xmlns:common="using:Drash.Common"
    DataContext="{Binding Model, RelativeSource={RelativeSource Self}}"
    x:Name="pageRoot">

    <common:LayoutAwarePage.Resources>

        <common:PercentageConverter x:Key="EightyPercentConverter" Percentage="80" />
        
    </common:LayoutAwarePage.Resources>
    
    <common:LayoutAwarePage.BottomAppBar>
        <AppBar>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"/>
                <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal"/>
            </Grid>
        </AppBar>
    </common:LayoutAwarePage.BottomAppBar>

    <Grid Style="{StaticResource LayoutRootStyle}" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="PrimaryColumn" Width="39"/>
            <ColumnDefinition Width="571"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="titlePanel" Grid.ColumnSpan="3" Margin="30,0,0,0">
            <TextBlock x:Name="pageTitle" 
                       Text="Binding LocationName" 
                       Style="{StaticResource PageHeaderTextStyle}" 
                       Foreground="#333"/>
        </Grid>

        <Grid x:Name="DataView"
              Grid.Column="0"
              Grid.Row="1"
              Margin="30,30,30,70" Grid.ColumnSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="DataItemView" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="{Binding ActualWidth, ElementName=DataItemView}"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Background="Black"
                  Grid.ColumnSpan="2"
                  Margin="0,0,0,5">
                <TextBlock Text="99%" 
                           VerticalAlignment="Center" HorizontalAlignment="Center" 
                           FontSize="133.333" 
                           FontFamily="Segoe UI Light"/>
            </Grid>

            <Grid Background="Black"
                  Grid.Column="0" Grid.Row="1"
                  Margin="0,5,5,0">
                <TextBlock 
                    Margin="0,6,0,0"
                    LineStackingStrategy="BlockLineHeight"
                    TextAlignment="Center"
                    LineHeight="34"
            		VerticalAlignment="Center" HorizontalAlignment="Center" 
            		FontSize="40" FontFamily="Segoe UI Light">
                    <Run Text="0.004" />
                    <LineBreak />
                    <Run Text="mm" />
                </TextBlock>

            </Grid>

            <Grid Background="Black"
                  Grid.Column="1" Grid.Row="1"
                  Margin="5,5,0,0"
                  x:Name="IntensityView">
                
                <Image Source="Assets/intensity3.png"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       MaxWidth="200" MaxHeight="200"
                       Width="{Binding ActualWidth, ElementName=IntensityView, Converter={StaticResource EightyPercentConverter}}"
                       Height="{Binding ActualWidth, ElementName=IntensityView, Converter={StaticResource EightyPercentConverter}}" MinWidth="100" MinHeight="100" UseLayoutRounding="True"
                       />

            </Grid>
        </Grid>

        <Grid x:Name="GraphView"
              Grid.Column="2"
              Grid.Row="1"
              Margin="30,30,30,70"
              Background="black">
        </Grid>
    </Grid>
</common:LayoutAwarePage>