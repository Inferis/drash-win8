<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#000000"
    android:orientation="vertical">

    <TextView android:gravity="center_vertical|center_horizontal" 
        android:text="Ranst, Belgium"
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:height="0px"
		android:textSize="18sp"
		android:layout_weight="1" 
        />

    <ImageView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:src="@drawable/dotted" 
	    android:id="@+id/dotted_top" />
	    
    <LinearLayout android:gravity="fill_vertical|fill_horizontal" 
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="1">
        
    	<TextView android:gravity="center_vertical|center_horizontal" 
	        android:text="66%"
	        android:textSize="80sp"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="3" 
        />
    
    	<RelativeLayout android:layout_width="0dp"
			android:layout_height="match_parent"
			android:id="@+id/intensityLayout"
			android:layout_weight="2">
    	    
    	    <ImageView 
    	        android:scaleType="center"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/intensityImage"
				android:src="@drawable/intensity0"
    	   	    android:alpha="1" 
    	        />

    	   	<LinearLayout
    	   	    android:alpha="0" 
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:id="@+id/intensityValue"
				>
		        
		    	<TextView android:gravity="bottom|center_horizontal" 
			        android:text="0.00"
					android:id="@+id/intensityNumber"
			        android:textSize="30sp"
			        android:layout_marginBottom="0dp"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1" 
		        />
		    
		        <TextView android:gravity="top|center_horizontal" 
			        android:text="mm"
			        android:textSize="30sp"
			        android:layout_marginTop="0dp"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1" 
		        />
		    
		    </LinearLayout>

		    	</RelativeLayout>
    
	</LinearLayout>
	
	<ImageView
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:src="@drawable/dotted" 
		 android:id="@+id/dotted_bottom" />

    <TextView android:gravity="center_vertical|center_horizontal" 
        android:text="graph"
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="1" 
		android:height="0px"
        />

</LinearLayout>
